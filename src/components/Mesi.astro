---
import Home from './UI/icons/Home.astro';
import Books from './UI/icons/Books.astro';
import Players from './UI/icons/Players.astro';
---

<div class='mesi mx-auto fixed bottom-2 mt-2 inset-x-0 z-50'>
  <div class='max-w-4xl mx-auto px-4'>
    <div class='w-full mx-auto'>
      <div
        x-data='{ open: false }'
        class='relative flex flex-col w-full p-4 mx-auto bg-[var(--bg-header)] uppercase rounded-2xl md:items-center md:justify-between md:flex-row border-[var(--text)] border-2'>
        <div
          class='flex flex-row items-center justify-between md:justify-start'>
          <a
            class='text-white hover:text-white/50 gap-4 items-center tracking-tighter inline-flex font-medium ml-2 text-xl'
            href='/'>
            <Home class='w-6 h-6' />
          </a>
          <a
            class='text-white hover:text-white/50 gap-4 items-center tracking-tighter inline-flex font-medium ml-2 text-xl'
            href='/libros'>
            <Books class='w-6 h-6' /></a
          >
          <a
            class='text-white hover:text-white/50 gap-4 items-center tracking-tighter inline-flex font-medium ml-2 text-xl'
            href='/lehiakideak'>
            <Players class='w-6 h-6' /></a
          >
          <button
            @click='open = !open'
            class='inline-flex items-center justify-center p-2 text-white hover:text-cyan-300 focus:outline-none focus:text-white md:hidden'
            ><svg
              class='w-6 h-6'
              stroke='currentColor'
              fill='none'
              viewBox='0 0 24 24'
              ><path
                :class="{'hidden': open, 'inline-flex': !open }"
                class='inline-flex'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M4 6h16M4 12h16M4 18h16'></path><path
                :class="{'hidden': !open, 'inline-flex': open }"
                class='hidden'
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M6 18L18 6M6 6l12 12'></path></svg
            ></button
          >
        </div><nav
          :class="{'flex': open, 'hidden': !open}"
          class='flex-col flex-grow hidden py-12 md:py-0 md:flex md:items-end justify-center md:flex-row'>
          <ul
            class='space-y-4 list-none text-xs lg:text-sm text-white md:space-y-0 md:ml-auto items-center md:inline-flex justify-center text-center md:text-left gap-3'>
            <li>
              <a href='/libros/enero' class='hover:text-white shrink-0'> Ene</a>
            </li>
            <li>
              <a href='/libros/febrero' class='hover:text-white shrink-0'>Feb</a
              >
            </li>
            <li>
              <a href='/libros/marzo' class='hover:text-white shrink-0'>Mar</a>
            </li><li>
              <a href='/libros/abril' class='hover:text-white shrink-0'>Abr</a>
            </li>

            <li>
              <a href='/libros/mayo' class='hover:text-white shrink-0'> Mayo</a>
            </li>
            <li>
              <a href='/libros/junio' class='hover:text-white shrink-0'> Jun</a>
            </li>
            <li>
              <a href='/libros/julio' class='hover:text-white shrink-0'> Jul</a>
            </li>
            <li>
              <a href='/libros/agosto' class='hover:text-white shrink-0'>
                Ago</a
              >
            </li>
            <li>
              <a href='/libros/septiembre' class='hover:text-white shrink-0'>
                Sep</a
              >
            </li>
            <li>
              <a href='/libros/octubre' class='hover:text-white shrink-0'>Oct</a
              >
            </li>
            <li>
              <a href='/libros/noviembre' class='hover:text-white shrink-0'>
                Nov</a
              >
            </li>
            <li>
              <a href='/libros/diciembre' class='hover:text-white shrink-0'>
                Dic</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<style>
  a {
    color: var(--text);
  }

  .mesi {
    max-width: calc(100% - 0.5rem);
    bottom: 0;
  }
</style>
