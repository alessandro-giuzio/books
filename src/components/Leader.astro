---
import { Image } from 'astro:assets';
import corona from '../assets/images/corona.svg';

/* const libros = await getCollection('libros'); */

/* const tuttiConcorrenti = await getCollection('concorrenti'); */
const { concorrente, position } = Astro.props;
console.log('Concorrente Slug:', concorrente.data.slug);
---

<div class='flex flex-col gap-2 items-center text-3xl pb-4'>
  <div class='instructions relative rounded-3xl border-2 border-white'>
    <div class=''>
      <Image
        src={concorrente.data.image}
        alt='proto'
        class={`rounded-full border-[10px] ${
          position === 1
            ? 'border-borderSilver'
            : position === 2
              ? 'border-borderGolden'
              : 'border-borderBronze'
        } object-cover aspect-square max-w-[120px] -translate-y-20`}
        width={124}
        format='webp'
        loading='eager'
      />

      <div class='avatar relative -top-[110px] left-10'>
        <div
          class={`w-[42px] rounded-lg rotate-45 h-[42px] grid place-content-center mx-auto  ${
            position === 1
              ? 'border-borderSilver bg-borderSilver'
              : position === 2
                ? 'border-borderGolden bg-borderGolden'
                : position === 3
                  ? 'border-borderBronze bg-borderBronze'
                  : 'border-[#FBF0FF]'
          } bg-[#fbf0ff]`}>
          <p
            class='mx-auto text-3xl flex items-center justify-center text-electricAmethyst font-semibold'>
            {
              position === 1 ? (
                <span class='text-3xl -rotate-45'>ðŸ¥ˆ</span>
              ) : position === 2 ? (
                <span class='text-3xl -rotate-45'>ðŸ¥‡</span>
              ) : position === 3 ? (
                <span class='text-3xl -rotate-45'>ðŸ¥‰</span>
              ) : (
                position
              )
            }
          </p>
        </div>
      </div>
    </div>
    <div class='flex flex-col gap-2 items-center text-3xl pb-4'>
      {
        position === 2 && (
          <div class='z-10  flex justify-center items-center'>
            <Image
              src={corona}
              width={74}
              alt='corona'
              format='webp'
              class=' object-cover rounded-3xl transform rotate-[16deg] -translate-y-12'
            />
          </div>
        )
      }
      <!-- dynamic route -->

      <a href={`/concorrenti/${concorrente.data.username}`} class='name'
        >{concorrente.data.nome}</a
      >
      <p class='punti'>{concorrente.data.punti}</p>
    </div>
  </div>
</div>

<style>
  .instructions {
    margin-bottom: 4rem;
    margin-top: 6rem;
    /* border: 1px solid rgba (var(--accent-light), 25%); */
    background: var(--bg-card);
    margin-inline: auto;
    display: flex;

    align-items: center;
    flex-direction: column;
    width: 100%;
    max-width: 10rem;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
</style>
