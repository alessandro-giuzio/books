<style>
  main {
    margin: 0 auto;
    width: 100%;
    color: var(--text); /* Use the theme’s text color */
    background-color: var(--bg); /* Use the theme’s background color */
    font-size: 20px; /* Standard font size */
    line-height: 1.6; /* Improved readability */
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem; /* Smaller padding for mobile devices */
    }
  }

  @media (max-width: 480px) {
    main {
      padding: 0.5rem; /* Further reduce padding for very small screens */
      font-size: 18px; /* Slightly reduce font size for readability */
    }
  }

  @media (max-width: 320px) {
    main {
      padding: 0.25rem; /* Minimum padding for extremely small screens */
      font-size: 16px; /* Further reduce font size to fit the screen */
    }
  }
</style>
