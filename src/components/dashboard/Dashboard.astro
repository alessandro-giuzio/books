---
const { name, count, topThreeTags } = Astro.props;
---

<div
  class='min-h-screen flex bg-gradient-to-r from-yellow-300 via-red-300 to-pink-300'>
  <!-- Sidebar -->
  <div class='w-64 bg-red-900 text-gray-100 flex flex-col justify-between'>
    <div class='p-6'>
      <h1 class='text-2xl font-bold text-yellow-400 tracking-wide'>
        Book Contest
      </h1>
      <nav class='mt-8 space-y-4'>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg bg-gray-800 hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Overview
        </a>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Concorrenti
        </a>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Leaderboard
        </a>
      </nav>
    </div>
    <div class='p-6'>
      <button
        class='w-full bg-yellow-500 hover:bg-yellow-600 transition-all text-white py-2 rounded-lg font-semibold'>
        Add New Book
      </button>
    </div>
  </div>

  <!-- Main content -->
  <div class='flex-1 bg-white p-6 overflow-y-auto'>
    <!-- Header -->
    <header
      class='bg-white shadow-xl rounded-lg p-6 flex items-center justify-between'>
      <h2 class='text-3xl font-bold text-gray-800'>
        ðŸ“– Concorrente's Reading Progress
      </h2>
      <div>
        <button
          class='bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-all'>
          Edit Profile
        </button>
      </div>
    </header>

    <!-- Concorrente Details -->
    <main class='mt-6'>
      <div class='bg-gray-50 rounded-lg shadow-lg p-6'>
        <h3 class='text-2xl font-semibold mb-4 text-gray-800'>
          Concorrente Info
        </h3>

        <!-- Concorrente Info Grid -->
        <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
          <!-- Name -->
          <div
            class='bg-gradient-to-tr from-blue-100 to-blue-200 p-6 rounded-lg shadow-md text-center hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>Name</h4>
            <p class='text-3xl font-bold text-blue-700 mt-2'>{name}</p>
          </div>

          <!-- Books Read -->
          <div
            class='bg-gradient-to-tr from-green-100 to-green-200 p-6 rounded-lg shadow-md text-center hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>Books Read</h4>
            <p class='text-3xl font-bold text-green-700 mt-2'>{count}</p>
          </div>

          <!-- Tags -->
          <div
            class='bg-gradient-to-tr from-pink-100 to-pink-200 p-6 rounded-lg shadow-md md:col-span-2 hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>Favorite Genres</h4>
            <ul class='flex justify-center space-x-4 mt-4'>
              {
                topThreeTags.map((tag: string) => {
                  return (
                    <li class='bg-pink-300 text-pink-900 px-3 py-1 rounded-full text-sm'>
                      {tag}
                    </li>
                  );
                })
              }
            </ul>
          </div>

          <!-- Concorrente Description -->
          <div
            class='bg-gradient-to-tr from-purple-100 to-purple-200 p-6 rounded-lg shadow-md md:col-span-2 hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>Current Book</h4>
            <p class='mt-2 text-gray-600 text-lg'>
              "The Name of the Wind" by Patrick Rothfuss. Halfway through the
              book and loving it!
            </p>
          </div>
        </div>

        <!-- Progress Bar for Books Read -->
        <div class='mt-6'>
          <h4 class='text-xl font-semibold text-gray-800 mb-2'>
            Reading Progress
          </h4>
          <div class='w-full bg-gray-200 rounded-full h-4 mb-4'>
            <div class='bg-green-500 h-4 rounded-full' style='width: 60%;'>
            </div>
          </div>
          <p class='text-sm text-gray-600'>60% completed this month</p>
        </div>

        <!-- Latest Books Gallery -->
        <div class='mt-8'>
          <h4 class='text-xl font-semibold text-gray-800 mb-4'>
            Latest Books Read
          </h4>
          <div class='grid grid-cols-2 md:grid-cols-4 gap-4'>
            <!-- Book 1 -->
            <div class='group'>
              <img
                src='https://example.com/book1.jpg'
                alt='Book 1'
                class='rounded-lg shadow-md hover:shadow-xl transition-all'
              />
              <p
                class='text-center text-gray-600 mt-2 group-hover:text-gray-800 transition-all'>
                Book Title 1
              </p>
            </div>
            <!-- Book 2 -->
            <div class='group'>
              <img
                src='https://example.com/book2.jpg'
                alt='Book 2'
                class='rounded-lg shadow-md hover:shadow-xl transition-all'
              />
              <p
                class='text-center text-gray-600 mt-2 group-hover:text-gray-800 transition-all'>
                Book Title 2
              </p>
            </div>
            <!-- Book 3 -->
            <div class='group'>
              <img
                src='https://example.com/book3.jpg'
                alt='Book 3'
                class='rounded-lg shadow-md hover:shadow-xl transition-all'
              />
              <p
                class='text-center text-gray-600 mt-2 group-hover:text-gray-800 transition-all'>
                Book Title 3
              </p>
            </div>
            <!-- Book 4 -->
            <div class='group'>
              <img
                src='https://example.com/book4.jpg'
                alt='Book 4'
                class='rounded-lg shadow-md hover:shadow-xl transition-all'
              />
              <p
                class='text-center text-gray-600 mt-2 group-hover:text-gray-800 transition-all'>
                Book Title 4
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
