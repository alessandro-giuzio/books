---
const { name, count, topThreeTags, image } = Astro.props;

import { Image } from 'astro:assets';
---

<div
  class='min-h-screen flex bg-gradient-to-r from-yellow-300 via-red-300 to-pink-300'>
  <!-- Responsive Sidebar: Adjust width on smaller screens -->
  <div
    class='hidden sm:hidden md:block lg:block w-64 bg-red-900 text-gray-100 flex-col justify-between'>
    <div class='p-6'>
      <h1 class='text-2xl font-bold text-yellow-400 tracking-wide'>
        Liburu Lehiaket
      </h1>
      <nav class='mt-8 space-y-4'>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg bg-gray-800 hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Overview
        </a>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Concorrenti
        </a>
        <a
          href='#'
          class='block py-2 px-4 rounded-lg hover:bg-yellow-500 transition-all text-sm font-semibold'>
          Leaderboard
        </a>
      </nav>
    </div>
    <div class='p-6'>
      <button
        class='w-full bg-yellow-500 hover:bg-yellow-600 transition-all text-white py-2 rounded-lg font-semibold'>
        Add New Book
      </button>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class='flex-1 bg-white p-6 overflow-y-auto'>
    <!-- Header with Responsive Flexbox -->
    <header
      class='bg-white shadow-xl rounded-lg p-4 sm:p-6 flex items-center justify-between'>
      <Image
        src={image}
        alt='Profile Picture'
        class='rounded-full'
        width='56'
        height='56'
        format='webp'
      />
      <h2 class='text-2xl sm:text-3xl font-bold text-gray-800'>
        ðŸ“– Lehiakidearen Irakurketa Aurrerapena
      </h2>
      <!-- Image -->
      <div>
        <!-- <button
          class='bg-blue-500 text-white px-3 sm:px-4 py-1 sm:py-2 rounded-lg hover:bg-blue-600 transition-all'>
          Edit Profile
        </button> -->
      </div>
    </header>

    <!-- Concorrente Details with Responsive Grid -->
    <main class='mt-6'>
      <div class='bg-gray-50 rounded-lg shadow-lg p-6'>
        <h3 class='text-2xl font-semibold mb-4 text-gray-800'>
          Lehiakidearen Informazioa
        </h3>

        <!-- Responsive Grid for Concorrente Info -->
        <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
          <div
            class='bg-gradient-to-tr from-blue-100 to-blue-200 p-6 rounded-lg shadow-md text-center hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>Name</h4>
            <p class='text-3xl font-bold text-blue-700 mt-2'>{name}</p>
          </div>
          <div
            class='bg-gradient-to-tr from-green-100 to-green-200 p-6 rounded-lg shadow-md text-center hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-xl font-medium'>
              Irakurritako Liburuak
            </h4>
            <p class='text-3xl font-bold text-green-700 mt-2'>{count}</p>
          </div>
          <div
            class='bg-gradient-to-tr from-pink-100 to-pink-200 p-4 sm:p-6 rounded-lg shadow-md md:col-span-2 hover:scale-105 transition-transform'>
            <h4 class='text-gray-700 text-lg sm:text-xl font-medium'>
              Genero Kuttunak
            </h4>
            <ul class='flex justify-center space-x-2 sm:space-x-4 mt-2 sm:mt-4'>
              {
                topThreeTags.map((tag: string) => (
                  <li class='bg-pink-300 text-pink-900 px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm'>
                    {tag}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
