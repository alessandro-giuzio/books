---
type Props = {
  tag: string;
  active?: boolean;
};

const { tag, active } = Astro.props;

const route =
  tag.toLowerCase() === 'all'
    ? '/liburuak'
    : `/liburuak/${encodeURIComponent(tag.toLowerCase())}`;
---

<a href={route} class={active ? 'filter active' : 'filter'}>
  {tag}
</a>

<style>
  .filter {
    font-size: 0.875rem;
    border: 1px solid #000;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    display: inline-block;
    white-space: pre;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  /* Active state styling */
  :global(a.filter.active) {
    background-color: #ccc;
    border-color: #555;
  }
</style>
