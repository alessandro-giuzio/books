---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
type Props = {
  concorrente: CollectionEntry<'concorrenti25'>;
};
const { concorrente } = Astro.props;
---

<div
  class='relative break-inside-avoid bg-gray-800 p-6 rounded-lg shadow-lg hover:scale-105 transition-transform'>
  <h3 class='text-2xl font-semibold'>{concorrente.data.nome}</h3>
  <p class='text-gray-300 mt-2'>Gure estratega burutsua.</p>
</div>
