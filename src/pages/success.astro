---
import '../styles/base.css';
import '../styles/globals.css';
import { Image } from 'astro:assets';
import UpdateDatabase from '../assets/images/updatingBatabase.webp';
// Supports weights 100-900
import '@fontsource-variable/raleway';
import '@fontsource/permanent-marker';
---

<!doctype html>
<html lang='eu'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Zorionak!</title>
  </head>
  <body
    class='min-h-screen flex flex-col items-center justify-center bg-linear-to-br from-midnightMystery to-electricAmethyst text-whisperingLilac p-6 sm:p-12'>
    <div
      class='max-w-3xl w-full bg-black/40 backdrop-blur-md border border-sunsetGold rounded-xl shadow-2xl p-8 sm:p-12 text-center'>
      <!-- Funny Update Image -->
      <div class='flex justify-center mb-6'>
        <Image
          src={UpdateDatabase}
          alt='Alessandro updating the database'
          class='w-44 sm:w-52 h-auto mx-auto rounded-full shadow-lg border-4 border-sunsetGold'
        />
      </div>

      <!-- Title -->
      <h1
        class='text-5xl sm:text-6xl font-extrabold text-sunsetGold mb-6 drop-shadow-lg'>
        Zorionak, irakurle paregabea!
      </h1>

      <!-- Placeholder Message -->
      <p
        class='text-xl sm:text-2xl font-medium leading-relaxed mb-8 text-white drop-shadow-md'>
        Zure liburua jaso dugu! ✨
        <br /> Laster zure puntuazio berriarekin eguneratuko dugu.
        <br /> Alessandro datu-basea eguneratzen ari da... 😅
      </p>

      <!-- Fun Decoration -->
      <div
        class='text-lg sm:text-xl italic text-bubblegumBlast mb-8 font-semibold'>
        “Azkarrago irakurri baino, azkarrago eguneratu...”
      </div>

      <!-- Single Button -->
      <a
        href='/'
        class='px-8 py-3 text-lg font-semibold bg-tropicalSky text-midnightMystery rounded-full shadow-lg hover:bg-bubblegumBlast hover:text-whisperingLilac transition-all'>
        Itzuli Hasierara
      </a>
    </div>
  </body>
</html>
