---
import { Image } from 'astro:assets';
import image404 from '../../src/content/images/404.webp';
---

<!doctype html>
<html lang='eu'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>404 Orrialdea Ez Da Aurkitu</title>
  </head>
  <body
    class='bg-blue-100 flex-col flex items-center justify-center h-screen text-center px-4'
  >
    <div>
      <h1 class='text-6xl font-bold text-blue-600'>404</h1>
      <p class='text-2xl font-semibold mt-4'>Orrialdea Ez Da Aurkitu</p>
      <p class='mt-2'>
        Barkatu, baina bilatzen ari zaren orrialdea ez dago edo beste leku
        batean dago.
      </p>
      <a
        href='/'
        class='inline-block bg-blue-500 text-white mt-4 px-6 py-3 rounded hover:bg-blue-700 transition-colors'
        >Hasiera Orrialdera Itzuli</a
      >
    </div>

    <!-- Optional: Include a humorous image or illustration -->
    <div class='mt-8'>
      <Image
        src={image404}
        alt='Funny Illustration'
        class='mx-auto rounded-xl shadow-xl'
        style='max-width: 90%; height: auto;'
        loading='eager'
      />
    </div>
  </body>
</html>
