              class='text-4xl font-bold text-basque-90 mb-4 flex items-center gap-2'>
              ğŸ“š <span
                class='bg-basque-50 text-white px-4 py-2 rounded-lg shadow-md'
                >Liburuen Kopurua</span
              >
            </h2>
            <p class='text-lg text-basque-80 uppercase tracking-wide'>
              ğŸ“… Urte Hau
            </p>
            <p class='text-6xl font-extrabold text-basque-50 drop-shadow-lg'>
              {count25}
            </p>
          </div>

          <div class='w-16 h-1 bg-basque-50 my-4 rounded-full'></div>
          <!-- Separator Line -->

          <p class='text-lg text-basque-80 uppercase tracking-wide'>
            ğŸ“– Aurreko Urtea
          </p>
          <p class='text-4xl font-bold text-basque-60'>{count24}</p>
        </div>
        <div
          class='bg-basque-25 md:col-span-2 p-6 text-white text-center rounded-lg shadow-lg'>
          <!-- 2024 Tags -->
          <div class='mb-4'>
            <h3 class='text-lg sm:text-xl font-semibold'>ğŸ“Œ 2024ko Etiketak</h3>
            <ul
              class='flex flex-wrap justify-center gap-2 sm:gap-3 mt-2 sm:mt-4'>
              {
                topThreeTags24.map((tag: string) => (
                  <li class='bg-white text-black px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm md:text-base first-letter:uppercase'>
                    {tag}
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- 2025 Tags -->
          <div>
            <h3 class='text-lg sm:text-xl font-semibold'>
              ğŸ“Œ 2025eko Etiketak
            </h3>
            <ul
              class='flex flex-wrap justify-center gap-2 sm:gap-3 mt-2 sm:mt-4'>
              {
                topThreeTags25.map((tag: string) => (
                  <li class='bg-white text-black px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm md:text-base first-letter:uppercase'>
                    {tag}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </Wrapper>

    <!-- Books Section -->
    <Wrapper variant='standard'>
      <h2 class='text-3xl font-semibold mb-4'>ğŸ“š Books Read</h2>

      <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
        {
          liburuakForLehiakide.length > 0 ? (
            liburuakForLehiakide.map(libro => (
              <div class='flex flex-col items-center text-center p-4 bg-gray-100 rounded-lg shadow-md'>
                {
                  <img
                    src={libro.data.cover}
                    alt={`Cover of ${libro.data.title}`}
                    class='w-40 h-60 rounded-md shadow-lg'
                  />
                }
                <h3 class='text-xl font-bold mt-2'>{libro.data.title}</h3>
                <p class='text-md text-gray-600'>By {libro.data.author}</p>
              </div>
            ))
          ) : (
            <p class='text-gray-500 text-lg'>
              No books found for this concorrente.
            </p>
          )
        }
      </div>
    </Wrapper>
  </main>
</Layout2025>
